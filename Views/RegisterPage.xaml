<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C868_WGU_Tallis_Jordan.Views.RegisterPage"
             Title="Register">

    <NavigationPage.TitleView>
        <Label FontSize="24" Text="Register" TextColor="Black" VerticalTextAlignment="Center" />
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">

            <Entry x:Name="UsernameEntry" Placeholder="Choose a Username" />

            <Entry x:Name="PasswordEntry" Placeholder="Choose a Password" IsPassword="True" />

            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <Button Text="Register" Clicked="OnRegisterClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>